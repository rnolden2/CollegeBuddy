<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tips_linearLayout"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bill_amount"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        android:editable="true"
        android:layout_marginLeft="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:numeric="integer|decimal"
        android:inputType="number|numberDecimal"
        android:hint="Bill $"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="fill_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="113dp">

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15%"
            android:id="@+id/fifthteen_percent_textView"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="0.00"
            android:id="@+id/amount_at_15_textView"
            android:layout_gravity="center_horizontal"
            android:layout_column="1"
            android:textSize="30dp"
            android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/total"
            android:id="@+id/total_with_15"
            android:layout_column="2"
            android:textSize="30dp"
            android:layout_row="0" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="18%"
            android:id="@+id/eighteen_percent_textView"
            android:textSize="30dp"
            android:layout_column="0"
            android:layout_row="1" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="0.00"
            android:id="@+id/amount_at_18_textView"
            android:textSize="30dp"
            android:layout_column="1"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/total"
            android:id="@+id/total_with_18"
            android:layout_column="2"
            android:textSize="30dp"
            android:layout_row="1" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20%"
            android:id="@+id/twenty_percent_textView"
            android:textSize="30dp"
            android:layout_column="0"
            android:layout_row="2" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="0.00"
            android:id="@+id/amount_at_20_textView"
            android:layout_column="1"
            android:textSize="30dp"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/total"
            android:id="@+id/total_with_20"
            android:layout_column="2"
            android:textSize="30dp"
            android:layout_row="2" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round Up"
        android:id="@+id/button_roundup"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change %"
        android:id="@+id/button_changepercentages"
        android:layout_alignTop="@+id/button_roundup"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
